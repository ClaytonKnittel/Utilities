#version 150 core

in vec3 vertexColor;
in vec3 toLightPos;
in vec3 surfaceNorm;
/* in vec2 textureCoord; */

out vec4 fragColor;

uniform vec3 lightColor;

/* uniform sampler2D texImage; */

void main() {
	vec3 nLight = normalize(toLightPos);
	vec3 nSurf = normalize(surfaceNorm);
	
	float nDot = dot(nLight, nSurf);
	float brightness = max(nDot, 0.1f);
	/* vec3 diffuse = brightness * lightColor; */
	vec3 diffuse = vec3(brightness, 0, 0);
	
	/* vec4 textureColor = texture(texImage, textureCoord); */
	/* fragColor = vec4(diffuse, 1.0) * vec4(vertexColor, 1.0); */ /* * textureColor; */
	fragColor = vec4(diffuse, 1); /* * vec4(vertexColor, 1); */
}
